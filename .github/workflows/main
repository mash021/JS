name: Test 13 Commits with JS Files

on:
  workflow_dispatch:

jobs:
  commit-test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        with:
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      - name: Make multiple commits with JS files
        run: |
          for i in {1..13}; do
            filename="script-$(date +%Y%m%d-%H%M%S).js"
            echo "// This is an automated file: Commit $i on $(date)" > $filename
            git add $filename
            git commit -m "Automated commit $i - Added $filename"
            git push https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/mash021/JS.git
            echo "Waiting for 5 minutes before next commit..."
            sleep 300
          done
