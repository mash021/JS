name: Automated 13 Commits

on:
  workflow_dispatch: # قابلیت اجرای دستی

jobs:
  commit-job:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.PAT_TOKEN }}

      - name: Set up Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      - name: Make multiple commits with JS files
        run: |
          for i in {1..13}; do
            filename="script-$(date +%Y%m%d-%H%M%S).js"
            echo "// Js commit $i on $(date)" > $filename
            git add $filename
            git commit -m "java script commit $i - Added $filename"
            git push https://x-access-token:${{ secrets.PAT_TOKEN }}@github.com/mash021/JS.git
            echo "Waiting for 5 minutes before next commit..."
            sleep 30
          done
