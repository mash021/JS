name: Automated 13 Commits and PR

on:
  workflow_dispatch:

jobs:
  commit-job:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.PAT_TOKEN }}

      - name: Set up Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      - name: Create a new branch
        run: |
          BRANCH_NAME="auto-commits-$(date +%Y%m%d-%H%M%S)"
          git checkout -b $BRANCH_NAME
          echo "BRANCH_NAME=$BRANCH_NAME" >> $GITHUB_ENV

      - name: Make multiple commits with JS files
        run: |
          for i in {1..13}; do
            filename="script-$(date +%Y%m%d-%H%M%S).js"
            echo "// Js commit $i on $(date)" > $filename
            git add $filename
            git commit -m "java script commit $i - Added $filename"
            echo "Waiting for 30 seconds before next commit..."
            sleep 30
          done

      - name: Push changes to new branch
        run: |
          git push https://x-access-token:${{ secrets.PAT_TOKEN }}@github.com/mash021/JS.git $BRANCH_NAME

      - name: Create Pull Request
        run: |
          PR_URL=$(gh pr create --base main --head $BRANCH_NAME --title "Automated PR: $BRANCH_NAME" --body "This PR contains 13 automated commits.")
          echo "Pull Request created: $PR_URL"
        env:
          GH_TOKEN: ${{ secrets.PAT_TOKEN }}

      - name: Request Reviews
        run: |
          gh pr review --request mash021 --repo mash021/JS
        env:
          GH_TOKEN: ${{ secrets.PAT_TOKEN }}
